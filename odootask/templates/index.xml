<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="index" name="index">
            <t t-call="odootask.main_layout">
                <t t-set="title" t-value="'首页'"/>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-10 image-items" style="width:100%;">
                            <div id="myCarousel" class="carousel slide" style="margin-top:10px;">
                                <!-- 轮播（Carousel）指标 -->
                                <ol class="carousel-indicators">
                                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                    <li data-target="#myCarousel" data-slide-to="1"></li>
                                </ol>
                                <!-- 轮播（Carousel）项目 -->
                                <div class="carousel-inner">
                                    <div class="item active">
                                        <img src="http://pic2.ooopic.com/13/58/87/63bOOOPICb3_1024.jpg" alt="First slide"/>
                                    </div>
                                    <div class="item">
                                        <img src="http://pic2.ooopic.com/13/58/87/63bOOOPICb3_1024.jpg" alt="Second slide" />
                                    </div>
                                </div>
                                <!-- 轮播（Carousel）导航 -->
                                <a class="carousel-control left" href="#myCarousel"
                                    data-slide="prev">
                                </a>
                                <a class="carousel-control right" href="#myCarousel"
                                    data-slide="next">
                                </a>
                            </div>
                         </div>

                        <div class="col-xs-9" id="page_search" style="margin-top:10px;width:100%">
                           <select id="search_type" class="form-control" style="width:100%;">
                               <option value="1">物资编号</option>
                                <option value="2">志愿者编号</option>
                            </select>
                        </div>
                        <div class="col-xs-7" style="margin-top:10px;width:77%;">
                            <input id="number" type="text" placeholder="请输入物资/志愿者编号" class="form-control"/>
                        </div>
                        <div class="col-xs-2" style="margin-top:10px;width:20%;">
                            <button id="search" class="btn btn-default">查询</button>
                        </div>

                        <div id="track_detail" style="margin-top:20px;" class="col-xs-10">
                            <label>物资追踪</label>
                            <ul style="margin-left: -22px;" id="tracks">
                            </ul>
                        </div>

                        <div id="good_detail" style="margin-top:20px;" class="col-xs-10">
                            <label>物资详情</label><br/>
                            <span>物资种类:</span><span id="category_id"></span><br/>
                            <span>规格:</span><span id="amount"></span><br/>
                            <span>计量单位:</span><span id="unit"></span><br/>
                            <span>捐赠人:</span><span id="doantor"></span><br/>
                            <span>捐赠时间:</span><span id="donate_time"></span><br/>
                            <span>受赠人:</span><span id="donee"></span><br/>
                            <span>受赠人类别:</span><span id="donee_type"></span><br/>
                            <span>备注:</span><span id="remark"></span><br/><br/>
                        </div>

                        <div id="search_info_tab" style="display:none;margin-top:20px;" class="col-xs-10">
                            <p >查询不到物资信息！</p>
                        </div>
                </div>
                </div>
            </t>
        </template>
    </data>
</openerp>
